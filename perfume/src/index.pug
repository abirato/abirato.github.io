            each val in ['Fragrance', 'Mens', 'Make Up', 'Skin Care', 'Sun & Tan', 'Bath & Body', 'Hair', 'Gifts', 'Special Offers', 'Brand A-Z']
              a(href= '#').footer__column__link= val
