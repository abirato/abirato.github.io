      +productCard(require('./images/products/product_8.png').default)
      +productCard(require('./images/products/product_9.png').default)
      +productCard(require('./images/products/product_10.png').default)
      +productCard(require('./images/products/product_5.png').default)
      +productCard(require('./images/products/product_6.png').default)
    +sliderBlock('TOP SELLERS FOR MEN')
      +productCard(require('./images/products/product_11.png').default, 'man')
      +productCard(require('./images/products/product_12.png').default, 'man')
      +productCard(require('./images/products/product_13.png').default, 'man')
      +productCard(require('./images/products/product_14.png').default, 'man')
      +productCard(require('./images/products/product_15.png').default, 'man')
      +productCard(require('./images/products/product_11.png').default, 'man')
