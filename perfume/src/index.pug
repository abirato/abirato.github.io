      +productCard(require('./images/products/product_1.png').default)
      +productCard(require('./images/products/product_2.png').default, 'man')
      +productCard(require('./images/products/product_3.png').default, 'man')
      +productCard(require('./images/products/product_4.png').default)
      +productCard(require('./images/products/product_5.png').default, 'man')
      +productCard(require('./images/products/product_2.png').default, 'man')
      +productCard(require('./images/products/product_4.png').default, 'man')
