mixin sliderBlock(title)
  .slider-block
    .container
      .slider-block__header
        .slider-block__header__title= title
        .slider__controls
          .slider__control_left.slider__control
          .slider__control_right.slider__control.slider__control__show
      .slider-block__body
        .slider__wrapper
          if block
            block

mixin productCard(url, gender= 'woman')
  .slider__item
    img(src= url alt='product').slider__item__image
    .slider__item__title davidoff
    if gender == 'woman'
      .slider__item__description Women's Perfume
    else if gender == 'man'
      .slider__item__description Men's Perfume
    .slider__item__price $ 200.00

mixin header-slider-item(title, url, active= false)
  if active
    - var classes = 'slider__item active'
  else 
    - var classes = 'slider__item'
  div(class= classes)
    .item-description
      .item-title= title
      .item-subtitle Women's Perfume
      .item-price $ 250.00
      button.red-button Buy Now
    .item-image
      img(src= url alt='perfume')

mixin banner-block-item(title, active= false)
  if active
    - var classes = 'slider__item active'
  else 
    - var classes = 'slider__item'
  div(class= classes)
    .slider__item__image
      img(src= require('./images/banner-slider/product_1.png').default alt='perfume')
    .slider__item__title= title
    .slider__item__subtitle Marc Jacobs
    .slider__item__price $ 265.00
    button.red-button Buy Now

doctype html
html(lang='ru')
  head
    title Perfume
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  body
    header.header
      .hamburger-button
        svg(viewBox= '0 0 100 80' width= '40' height= '40')
          rect(width= '80' height= '8')
          rect(y= '25' width= '80' height= '8')
          rect(y= '50' width= '80' height= '8')
      .main-block
        .header__top
          .logo
          .header__navigation
            a(href= '#').login-link login
            a(href= '#').search-link
            a(href= '#').cart-link
        .header-slider
          .slider__body
            +header-slider-item('Jasmin Noir_1', require('./images/header-slider/product_1.png').default, true)
            +header-slider-item('davidoff', require('./images/header-slider/product_2.png').default)
            +header-slider-item('Jasmin Noir_2', require('./images/header-slider/product_1.png').default)
            +header-slider-item('Jasmin Noir_3', require('./images/header-slider/product_1.png').default)
